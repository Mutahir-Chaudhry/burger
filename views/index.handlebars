<div class="row">
  <center>

{{!-- Burgers already created ordered and ready to be devoured --}}
    <div class="col-md-6">
      <h3>Burger ready to be devoured!</h3>
      <div id="ready_to_eat">
        {{#each burgers}}
        {{#unless devoured}}
        <form action="burger/eat/{{id}}" method="POST">
          <div class="input-group">
            <li class="form-control">{{id}}.{{burger_name}}</li>
            <span class="input-group-btn">
              <button class="btn btn-danger devour-button" type="submit">DEVOUR IT!</button>
            </span>
          </div>
        </form> {{/unless}} {{/each}} </div>
    </div>

{{!-- Burgers already devoured --}}
  <div class="col-md-6">
      <h3>Already devoured burgers!</h3>
      <div id="already_eaten">
        {{#each burgers}}
        {{#if this.devoured}}
        <div class="input-group">
          <li class="form-control">{{this.id}}.{{this.burger_name}}</li>
        </div>
        {{/if}}
        {{/each}}
      </div>
    </div>
  </center>
</div>